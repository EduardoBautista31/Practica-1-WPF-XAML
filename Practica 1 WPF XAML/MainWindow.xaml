<Window x:Class="Practica_1_WPF_XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica_1_WPF_XAML"
        mc:Ignorable="d"
        Title="Inicia Sesion en FACEBOOK" Background="DarkBlue" Height="300" Width="350" >
    <StackPanel Margin="17"  >
        <Label HorizontalAlignment="Center" FontSize="17" Foreground="WhiteSmoke">FACEBOOK</Label>
        <Label Foreground="White">Nombre de Usuario:</Label>
        <TextBox></TextBox>
        <Label Foreground="White">Telefono</Label >
        <TextBox></TextBox>
        <Label Foreground="White">Clave de acceso</Label>
        <PasswordBox></PasswordBox>
        <UniformGrid Columns="2">
            <WrapPanel>
                <CheckBox VerticalAlignment="Center"></CheckBox>
                <Label Foreground="White">Recuerdame plis</Label>

            </WrapPanel>
            <Label HorizontalAlignment="Right" Foreground="White">¿Olvidaste tu contraseña?</Label>
           
            
        </UniformGrid>
        <Button Margin="7" Background="Red" Foreground="White" FontSize="14">ENTRAR</Button>


    </StackPanel>
    
  
</Window>
